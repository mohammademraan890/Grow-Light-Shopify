  <a href="{{ block.settings.button_link }}" class="custom-btn block-id-{{ block.id }}">
    {{ block.settings.button_label }}
  </a>

<style>
  .custom-btn {
    display: inline-block;
    padding: 12px 24px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 4px;
    transition: opacity 0.3s ease;
    background-color: {{ block.settings.bg_color }};
    color: {{ block.settings.text_color }};
  }
  .custom-btn:hover {
    opacity: 0.8;
  }
</style>

{% schema %}
{
  "name": "Custom Button",
  "tag": "div",
  "settings": [
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Click Me"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
   
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Custom Button"
    }
  ]
}
{% endschema %}