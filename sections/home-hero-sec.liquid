{%- style -%}
  /* ===============================
     HERO SWIPER VARIABLES
  ================================ */
  .hero-swiper-section {
    /* Desktop */
    --heading-size: 50px;
    --text-size: 16px;
    --content-padding: {{ section.settings.content_padding }}px;

    /* Mobile */
    --mobile-heading-size: {{ section.settings.mobile_heading_size }}px;
    --mobile-text-size: {{ section.settings.mobile_text_size }}px;
    --mobile-content-padding: {{ section.settings.mobile_content_padding }}px;
    --mobile-spacing: {{ section.settings.mobile_spacing }}px;

    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    background: {{ section.settings.section_bg }};
  }

  /* ===============================
     DESKTOP STYLES
  ================================ */
  .hero-slide {
    border-color: {{ section.settings.border_color }};
  }

  .hero-content {
    padding: var(--content-padding);
    color: {{ section.settings.text_color }};
  }

  .hero-content h2 {
    font-size: var(--heading-size);
    line-height: 1.1;
  }

  .hero-content p {
    font-size: var(--text-size);
  }

  .hero-btn {
    background: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text }};
  }

  .hero-btn:hover {
    background: {{ section.settings.button_hover }};
  }

  /* ===============================
     MOBILE STYLES (<768px)
  ================================ */
  @media (max-width: 767px) {
    /* Layout */
    .hero-slide .grid {
      grid-template-columns: 1fr;
    }

    .hero-slide img {
      order: 1;
      height: auto;
    }

    .hero-content {
      order: 2;
      padding: var(--mobile-content-padding);
    }

    /* Typography */
    .hero-content h2 {
      font-size: var(--mobile-heading-size);
      line-height: 1.2;
    }

    .hero-content p {
      font-size: var(--mobile-text-size);
    }

    /* Vertical spacing */
    .hero-content > div > * + * {
      margin-top: var(--mobile-spacing);
    }
  }
{%- endstyle -%}

<style>
  /* Disable image drag / text select for swiper */
  #mySwiper,
  #mySwiper * {
    user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    -webkit-touch-callout: none;
  }

  #mySwiper img {
    pointer-events: none;
  }
</style>


<div class="hero-swiper-section bg-white">
  <div class="custom-container">
    <div id="mySwiper" class="swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide hero-slide border overflow-hidden rounded-sm" {{ block.shopify_attributes }}>
            <div class="grid grid-cols-3 h-full ">
              {% if block.settings.reverse_layout %}
                <!-- IMAGE -->
                <div class="col-span-2">
                  <img
                    src="{{ block.settings.image | image_url: width: 1200 }}"
                    class="object-cover h-full w-full"
                    alt=""
                  >
                </div>
              {% endif %}

              <!-- CONTENT -->
              <div class="col-span-1 hero-content">
                <div class="flex flex-col h-full justify-end">
                  <p class="text-[16px] font-medium">
                    {{ block.settings.tagline }}
                  </p>
                  <h2 class="text-[50px] my-2 leading-[56px] font-bold">
                    {{ block.settings.heading }}
                  </h2>
                  <p class="text-[16px] mb-5">
                    {{ block.settings.subheading }}
                  </p>
                  <a
                    href="{{ block.settings.button_link }}"
                    class="hero-btn block text-[16px] font-medium w-full py-2.5 rounded-sm text-center transition"
                  >
                    {{ block.settings.button_label }}
                  </a>
                </div>
              </div>

              {% unless block.settings.reverse_layout %}
                <!-- IMAGE -->
                <div class="col-span-2">
                  <img
                    src="{{ block.settings.image | image_url: width: 1200 }}"
                    class="object-cover h-full w-full"
                    alt=""
                  >
                </div>
              {% endunless %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

