{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.bg_color }};
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .service-item-{{ section.id }} .service-text {
    font-size: {{ section.settings.text_size_mobile }}px;
    color: {{ section.settings.text_color }};
  }

  @media screen and (min-width: 750px) {
    .service-item-{{ section.id }} .service-text {
      font-size: {{ section.settings.text_size_desktop }}px;
    }
  }

  .icon-wrapper-{{ section.id }} {
    width: {{ section.settings.icon_bg_size }}px;
    height: {{ section.settings.icon_bg_size }}px;
    background-color: {{ section.settings.icon_bg_color }};
  }
  
  .icon-wrapper-{{ section.id }} svg, 
  .icon-wrapper-{{ section.id }} img {
    width: 50%;
    height: auto;
    color: {{ section.settings.icon_color }};
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding md:px-4 px-0">
  <div class="custom-container">
    <div class="flex justify-between items-start flex-col md:items-center md:flex-row gap-6 lg:gap-12 xl:gap-16">
      {% for block in section.blocks %}
        <div class="service-item-{{ section.id }} flex items-center gap-4 group" {{ block.shopify_attributes }}>
          
          {% comment %} Icon Circle {% endcomment %}
          <div class="icon-wrapper-{{ section.id }} rounded-full flex items-center justify-center flex-shrink-0 transition-transform duration-300 group-hover:scale-110">
            {% if block.settings.custom_svg != blank %}
              {{ block.settings.custom_svg }}
            {% elsif block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url: width: 100 }}" alt="{{ block.settings.text }}" loading="lazy">
            {% else %}
              {% comment %} Default fallback icon {% endcomment %}
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
            {% endif %}
          </div>

          {% comment %} Text Content {% endcomment %}
          {% if block.settings.text != blank %}
            <span class="service-text font-bold whitespace-nowrap">
              {{ block.settings.text }}
            </span>
          {% endif %}

        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Service Features",
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "icon_bg_color",
      "label": "Icon Background (Circle)",
      "default": "#f0fdf4"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon/SVG Color",
      "default": "#166534"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1f2937"
    },
    {
      "type": "header",
      "content": "Typography & Sizes"
    },
    {
      "type": "range",
      "id": "text_size_desktop",
      "min": 12,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Text Size (Desktop)",
      "default": 18
    },
    {
      "type": "range",
      "id": "text_size_mobile",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text Size (Mobile)",
      "default": 16
    },
    {
      "type": "range",
      "id": "icon_bg_size",
      "min": 40,
      "max": 120,
      "step": 5,
      "unit": "px",
      "label": "Icon Circle Size",
      "default": 80
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Service Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "Fast Communication"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon Image",
          "info": "Upload a PNG or SVG file"
        },
        {
          "type": "html",
          "id": "custom_svg",
          "label": "Custom SVG Code",
          "info": "Paste SVG code here for best quality. Overrides image."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Service Features",
      "blocks": [
        { "type": "service", "settings": { "text": "Fast Communication" } },
        { "type": "service", "settings": { "text": "Transparent Pricing" } },
        { "type": "service", "settings": { "text": "Free Shipping" } }
      ]
    }
  ]
}
{% endschema %}