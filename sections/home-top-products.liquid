      speed: 600,
      freeMode: false,

      slidesPerGroup: 1,
      centeredSlides: false,

      watchSlidesProgress: true,
      watchOverflow: true,

      autoplay: {
        delay: 3000, // 3 seconds
        disableOnInteraction: false,
        pauseOnMouseEnter: true,
      },

      navigation: {
        nextEl: '.next-swiper-button',
        prevEl: '.prev-swiper-button',
