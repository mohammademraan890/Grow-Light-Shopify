<header class=" top-0 left-0 right-0 bg-white">
  <div class="header-top-inner border-b border-[#E9E9E9] ">
    <div class="custom-container">
      <div class="flex items-center gap-10">
        <div class="header-logo">
          <img src="{{ "grow-light-logo.webp" | asset_url }}" alt="Grow Light Logo" width="100" height="100">
        </div>
        <div class="header-left flex flex-col gap-[20px] w-full">
          <div class="header-left-top border-b border-[#e9e9e9] py-[10px]! flex justify-between text-[12px] items-center w-full">
            <div class="flex items-center gap-5">
              <a href="#" class="hover:underline!">support@growlightheaven.com</a>
              <a href="#" class="hover:underline!">(914) 219-6983</a>
              <span>Mon-Fri: 9AM - 5PM EST</span>
            </div>
            <div class="header-left-top-right flex items-center gap-5">
              <a href="#" class="hover:underline!">Commercial Pricing</a>
              <a href="#" class="hover:underline!"> Get Rebates</a>
              <a href="#" class="hover:underline!">Facility Design</a>
            </div>
          </div>
          <div class="header-left-bottom mb-5! flex items-center gap-10!">
            <div class="w-full flex items-center gap-2 border focus-within:shadow-[0_0_0_3px_#4140421a] border-[#959595] rounded-sm">
              <input
                placeholder="What are you looking for?"
                class="w-full py-2.5! px-5! text-[14px] focus:outline-none"
                type="text"
              >
              <button class="cursor-pointer h-[100%] w-[40px] flex items-center justify-center">
                {% render 'svg-icons', name: 'search-icon' %}
              </button>
            </div>
            <div class=" items-center text-[12px] flex gap-10">
              <a href="#" class="flex items-center flex-col group">
                {% render 'svg-icons', name: 'user-icon', icon_class: 'fill-[#414042] group-hover:fill-[#006A2E]' %}
                <span class="white whitespace-nowrap group-hover:underline">Sign In</span>
              </a>
              <a href="#" class="flex items-center flex-col group">
                {% render 'svg-icons', name: 'wishlist-icon', icon_class:"fill-[#414042]! group-hover:fill-[#006A2E] %}
                <span class=" whitespace-nowrap group-hover:underline"> My Wishlist</span>
              </a>
              <a href="#" class="flex items-center flex-col group">
                {% render 'svg-icons', name: 'cart-icon', icon_class:"fill-[#414042] group-hover:fill-[#006A2E] %}
                <span class=" whitespace-nowrap group-hover:underline">My Cart</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="nav-menu border-b border-[#006A2E] bg-white">
    <div class="custom-container">
      <ul class="flex item-center justify-between text-[16px] font-medium  text-[#414042] ">
        <li><a href="#" class="block px-1.25! py-3!">Grow Lights</a></li>
        <li><a href="#" class="block px-1.25! py-3!">Grow Room Environment</a></li>
        <li><a href="#" class="block px-1.25! py-3!"> Harvest Equipment</a></li>
        <li><a href="#" class="block px-1.25! py-3!">Extraction Equipment</a></li>
        <li><a href="#" class="block px-1.25! py-3!">Commercial Hydroponics</a></li>
        <li><a href="#" class="block px-1.25! py-3!">Garden Care</a></li>
        <li><a href="#" class="block px-1.25! py-3!">Nutrients</a></li>
      </ul>
    </div>
  </div>
  <div class="header-btm text-[rgb(65, 64, 66)] py-2.5! bg-[#F4F4F4]">
    <div class="custom-container">
      <div class="grid grid-cols-2 item-center justify-center">
        <div class="grid-cols-1 text-center">
          <p class="text-[16px] font-medium">Commercial Grower?</p>
          <p class="text-[14px]">
            For commercial pricing: <a href="#" class="text-[#36895A]! hover:underline!">(914) 219-6983</a>
          </p>
        </div>
        <div class="grid-cols-1 text-center">
          <p class="text-[16px] font-medium">Commercial Grower?</p>
          <p class="text-[14px]">
            For commercial pricing: <a href="#" class="text-[#36895A]! hover:underline!">(914) 219-6983</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</header>
