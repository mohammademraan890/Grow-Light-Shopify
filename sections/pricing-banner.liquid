{%- style -%}
  .section-{{ section.id }}-wrapper {
    {% if section.settings.bg_image != blank %}
      background: url('{{ section.settings.bg_image | image_url: width: 2000 }}') no-repeat center center;
    {% else %}
      background-color: #f4f4f4;
    {% endif %}
    background-size: cover;
    min-height: {{ section.settings.min_height }}px;
    display: flex;
    align-items: center;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .glh-heading-{{ section.id }} {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.text_color }};
  }

  .glh-subheading-{{ section.id }} {
    font-size: {{ section.settings.subheading_size }}px;
    color: {{ section.settings.text_color }};
    opacity: 0.9;
  }

  .glh-dummy-logo {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px dashed {{ section.settings.accent_color }};
    padding: 10px;
  }

  .glh-btn-{{ section.id }} {
    background-color: {{ section.settings.btn_bg_color }};
    color: {{ section.settings.btn_text_color }};
  }

  .glh-btn-{{ section.id }}:hover {
    filter: brightness(0.9);
  }
{%- endstyle -%}

<div class="{% if section.settings.full_width %}w-full{% else %}max-w-7xl mx-auto px-4{% endif %} my-8">
  <div class="section-{{ section.id }}-wrapper section-{{ section.id }}-padding rounded-md overflow-hidden relative">
    
    {% comment %} Layout Logic: flex-row or flex-row-reverse {% endcomment %}
    <div class="container mx-auto px-6 md:px-20">
      <div class="flex flex-col md:flex-row items-center gap-10 {% if section.settings.layout == 'right' %}md:flex-row-reverse{% endif %}">
        
        {% comment %} Logo Column {% endcomment %}
        <div class="flex-1 flex justify-center">
          {% if section.settings.logo != blank %}
            <img
              src="{{ section.settings.logo | image_url: width: 400 }}"
              alt="{{ shop.name }}"
              class="transition-transform duration-500 hover:scale-105"
              style="max-width: {{ section.settings.logo_width }}px; height: auto;"
            >
          {% else %}
            <div class="glh-dummy-logo">LOGO</div>
          {% endif %}
        </div>

        {% comment %} Text Column {% endcomment %}
        <div class="flex-1 text-center {% if section.settings.layout == 'left' %}md:text-left{% else %}md:text-right{% endif %}">
          <h2 class="glh-heading-{{ section.id }} font-bold mb-4 line-height-1.2">
            {{ section.settings.heading }}
          </h2>
          <p class="glh-subheading-{{ section.id }} mb-6 leading-relaxed">
            {{ section.settings.subheading }}
          </p>
          <a href="{{ section.settings.button_link }}" class="glh-btn-{{ section.id }} inline-block font-semibold px-8 py-4 rounded-sm transition-all duration-200">
            {{ section.settings.button_label }}
          </a>
        </div>

      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Commercial Banner",
  "settings": [
    {
      "type": "header",
      "content": "Layout & Size"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Desktop Logo Position",
      "options": [
        { "value": "left", "label": "Logo Left" },
        { "value": "right", "label": "Logo Right (Reverse)" }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width Section",
      "default": false
    },
    {
      "type": "range",
      "id": "min_height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Banner Min Height",
      "default": 400
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Inside Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Inside Padding Bottom",
      "default": 40
    },
    {
      "type": "header",
      "content": "Branding & Background"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 400,
      "step": 10,
      "unit": "px",
      "label": "Logo Width",
      "default": 220
    },
    {
      "type": "header",
      "content": "Text Styles"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Headline",
      "default": "Get commercial pricing for any size facility."
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 30
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Sub-headline",
      "default": "Join the revolution! See why 142 facilities switched to GrowLight Heaven last year."
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Subheading Font Size",
      "default": 16
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#454545"
    },
    {
      "type": "header",
      "content": "Button Styles"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "Get Commercial Pricing"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button Background",
      "default": "#006a2d"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color (Dummy Logo Border)",
      "default": "#4a7c59"
    }
  ],
  "presets": [
    {
      "name": "Commercial Banner"
    }
  ]
}
{% endschema %}