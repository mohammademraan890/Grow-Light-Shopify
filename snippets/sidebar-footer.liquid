{% comment %} <style>
  /* Matching button styles from your image */
  .sidebar-footer .flex-col a {
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1.5px solid #006A2E!;
    border-radius: 4px;
    padding: 12px;
    font-size: 14px;
  }
</style>

<div class="sidebar-footer pt-6 mt-6 px-4">
  <div class="flex flex-col gap-3 mb-6">
    {% if section.settings.show_signin %}
    <a href="{{ section.settings.signin_link }}" class="flex relative group items-center justify-center gap-2 border border-[#006A2E] text-[#006A2E]! py-3 rounded-md font-medium">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle>
      </svg>
      {{ section.settings.signin_label }}
      <div class="btn-overlay absolute bg-[#EDF4F0] z-10 w-full h-full top-0 left-0 opacity-0 scale-30 rounded-sm group-hover:scale-100 group-hover:opacity-30 duration-500 transition-all"></div>
    </a>
    {% endif %}

    {% if section.settings.show_wishlist %}
    <a href="{{ section.settings.wishlist_link }}" class="flex relative group items-center justify-center gap-2 border border-[#006A2E] text-[#006A2E]! py-3 rounded-md font-medium">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
      </svg>
      {{ section.settings.wishlist_label }}
      <div class="btn-overlay absolute bg-[#EDF4F0] z-10 w-full h-full top-0 left-0 opacity-0 scale-30 rounded-sm group-hover:scale-100 group-hover:opacity-30 duration-500 transition-all"></div>
    </a>
    {% endif %}
  </div>

  <div class="contact-info space-y-2 text-[#414042] font-medium text-[12px]">
    <a href="mailto:{{ section.settings.email }}" class="block">{{ section.settings.email }}</a>
    <a href="tel:{{ section.settings.phone | replace: ' ', '' | replace: '(', '' | replace: ')', '' | replace: '-', '' }}" class="block">{{ section.settings.phone }}</a>
    <p>{{ section.settings.hours }}</p>
  </div>

  <div class="extra-links mt-2 space-y-2 pb-8">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link_url }}" class="block text-[12px] font-medium" {{ block.shopify_attributes }}>
        {{ block.settings.link_text }}
      </a>
    {% endfor %}
  </div>
</div>


{% schema %}
{
  "name": "Sidebar Footer",
  "settings": [
    { "type": "header", "content": "Primary Buttons" },
    { "type": "text", "id": "signin_label", "label": "Sign In Label", "default": "Sign In" },
    { "type": "url", "id": "signin_link", "label": "Sign In Link" },
    { "type": "checkbox", "id": "show_signin", "label": "Show Sign In", "default": true },
    { "type": "text", "id": "wishlist_label", "label": "Wishlist Label", "default": "My Wishlist" },
    { "type": "url", "id": "wishlist_link", "label": "Wishlist Link" },
    { "type": "checkbox", "id": "show_wishlist", "label": "Show Wishlist", "default": true },
    { "type": "header", "content": "Contact Info" },
    { "type": "text", "id": "email", "label": "Email", "default": "support@growlightheaven.com" },
    { "type": "text", "id": "phone", "label": "Phone", "default": "(914) 219-6983" },
    { "type": "text", "id": "hours", "label": "Hours", "default": "Mon-Fri: 9AM - 5PM EST" }
  ],
  "blocks": [
    {
      "type": "extra_link",
      "name": "Extra Link",
      "settings": [
        { "type": "text", "id": "link_text", "label": "Link Text", "default": "Extra Link" },
        { "type": "url", "id": "link_url", "label": "Link URL" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sidebar Footer",
      "blocks": [
        { "type": "extra_link", "settings": { "link_text": "Commercial Pricing" } },
        { "type": "extra_link", "settings": { "link_text": "Get Rebates" } },
        { "type": "extra_link", "settings": { "link_text": "Facility Design" } }
      ]
    }
  ]
}
{% endschema %} {% endcomment %}
